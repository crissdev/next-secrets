{
  "name": "next-secrets",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=22.6.0"
  },
  "scripts": {
    "dev": "node validate-env.mts && next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit",
    "test:unit": "jest",
    "test:integration": "jest -c jest-integration.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:ci": "npm run test:unit && npm run test:integration",
    "test:e2e:ci": "start-server-and-test 'npm run build && npm run start' http://localhost:3000 'playwright test'",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepare": "husky",
    "dev:docker": "docker compose up",
    "dev:docker:detached": "docker compose up -d",
    "dev:docker:down": "docker compose down",
    "dev:docker:down:volumes": "docker compose down -v",
    "dev:docker:logs": "docker compose logs -f app",
    "dev:docker:sh": "docker compose exec app sh",
    "dev:docker:prisma:migrate": "docker compose exec app pnpm prisma migrate dev",
    "dev:docker:prisma:seed": "docker compose exec app pnpm prisma db seed",
    "dev:docker:prisma:studio": "docker compose exec app pnpm prisma studio"
  },
  "prisma": {
    "seed": "node ./prisma/seed.mts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.19.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.561.0",
    "next": "15.5.9",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.68.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@faker-js/faker": "^9.9.0",
    "@next/env": "15.5.9",
    "@next/eslint-plugin-next": "15.5.9",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@testcontainers/postgresql": "^11.10.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.4",
    "@types/pg": "^8.16.0",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.5.9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "install": "^0.13.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "pg": "^8.16.3",
    "pnpm": "^10.26.0",
    "prettier": "^3.7.4",
    "prisma": "^6.19.1",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "^4.1.18",
    "testcontainers": "^11.10.0",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  }
}
