{
  "name": "next-secrets",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.6.0"
  },
  "scripts": {
    "dev": "node validate-env.mts && next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit",
    "test:unit": "NODE_ENV=test jest",
    "test:integration": "NODE_ENV=test jest -c jest-integration.config.ts",
    "test:e2e": "NODE_ENV=test playwright test",
    "test:e2e:ui": "NODE_ENV=test playwright test --ui",
    "test:ci": "npm run test:unit && npm run test:integration",
    "test:e2e:ci": "NODE_ENV=test start-server-and-test 'npm run build && npm run start' http://localhost:3000 'playwright test'",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepare": "husky"
  },
  "prisma": {
    "seed": "node ./prisma/seed.mts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
