// Data source
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Generator
generator client {
  provider = "prisma-client-js"
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String
  color       String
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Secret      Secret[]

  @@unique([name])
  @@map("projects")
}

enum SecretType {
  OTHER
  API_KEY
  CONNECTION_STRING
  ENVIRONMENT_VARIABLE
  PASSWORD
  TOKEN
}

model Environment {
  id          String   @id @default(uuid())
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  secrets Secret[]

  @@unique([name])
  @@map("environments")
}

model Secret {
  id            String     @id @default(uuid())
  name          String
  description   String
  type          SecretType @default(OTHER)
  value         String
  projectId     String
  environmentId String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  environment Environment @relation(fields: [environmentId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  project     Project     @relation(fields: [projectId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([name, environmentId])
  @@map("secrets")
}
